// Widget
.widget {
  position: relative;
  background-size: cover;
  background-color: #fff;
  transition: all .3s;
  min-height: 100px;
  .widget-avatar {
    border-radius: 50%;
    width: 50px;
  }
  .widget-title {
    .md-subhead, .md-body-1, .md-body-2 {
      margin: 0;
    }
    .md-body-1, .md-body-2 {
      opacity: 0.5;
    }
  }
  .widget-content {
    overflow: hidden;
    flex-grow: 1;
    >img {
      display: block;
      max-width: 100%;
    }
  }
  &.layout-row {
    .widget-title {
      flex: 0 0 50%;
    }
  }
  a {
    color: inherit;
    border-bottom: 1px dashed;
  }
  md-icon {
    color: inherit;
  }
  md-checkbox .md-icon {
    border-color: inherit;
  }


  .widget-loading {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: white;
    .widget-loading-inner {
      transform: scale(0.5);
    }
  }
}


// Blog widget
.widget-blog {
  .widget-blog-text {
    position: relative;
  }
}
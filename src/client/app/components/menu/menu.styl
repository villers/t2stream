.side-menu-link
  display block
  text-align left
  width 100%
  height 48px
  padding 0px 16px
  margin 0px
  text-transform none
  border-radius 0 !important
  white-space normal
  line-height 48px
  position relative
  z-index 2
  box-shadow none !important
  transform translate3d(0,0,0)
  &:hover, &:focus
    transform translate3d(0,0,0)
  .uppercase-all &
    text-transform uppercase
  .uppercase-top-level &
    text-transform uppercase
  .uppercase-top-level .drop-down-list &
    text-transform none

.sidebar-left-toolbar
  box-shadow 0px 1px 0px rgba(0,0,0,0.12)
  z-index 10

.side-menu-icon[md-font-icon], .menu-toggle-icon[md-font-icon]
  height 100%
  line-height inherit
  font-size 1.5rem

.side-menu-icon[md-font-icon]
  width 24px
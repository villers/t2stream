.blurred-bg {
  background: url('../assets/images/backgrounds/blurred.jpg') no-repeat 50% 50%;
  background-size: cover;
}

#movies md-toolbar,
#movies md-card {
  background: none;
  box-shadow none;
  //rgba(255, 255, 255, 0.1)
}


#movies md-content {
  background:none;
}

#movies {
  margin:0 auto;
}

#movies .movie {
  margin:10px 25px;
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 7px 21px #141414;
}

#movies .movie h1 {
  color:#fff;
  padding:5px 0 10px 5px;
  font-weight:normal;
  font-size:16px;
}

#movies .movie figure {
  margin:0 auto;
  //text-align:center;
}

#movies .movie figure img {
  width:auto;
}

#movies .movie figure figcaption {

}

#movies .movie .notes {
  width:100px;
}

#movies .movie .notes img.star {
  width:20px;
}

// Utilities

.full-height
  height: 100%
  box-sizing: border-box

.full-width
  width: 100%
  max-width: 100%
  box-sizing: border-box

// - Margin Classes
.margin-normal
  margin: 16px

$i = 0
for n in 0..((200 - $i) / 10)
  .margin-{$i}
    margin: ($i)px !important
  .margin-top-{$i}
    margin-top: ($i)px !important
  .margin-left-{$i}
    margin-left: ($i)px !important
  .margin-bottom-{$i}
    margin-bottom: ($i)px !important
  .margin-right-{$i}
    margin-right: ($i)px !important
  $i = $i + 10

// - Padding Classes
.padding-normal
  padding: 16px
.padded-content-page
  padding: 16px 24px

//Stylus does not support while loops
$i = 0
for n in 0..((200 - $i) / 10)
  .padding-{$i}
    padding: ($i)px !important
  .padding-top-{$i}
    padding-top: ($i)px !important
  .padding-left-{$i}
    padding-left: ($i)px !important
  .padding-bottom-{$i}
    padding-bottom: ($i)px !important
  .padding-right-{$i}
    padding-right: ($i)px !important
  $i = $i + 10

// - Opacity Classes
$i = 0
for n in 0..((1 - $i) / 0.1)
  .opacity-{round($i * 100)}
    opacity: $i !important
  $i = $i + 0.1

// - Positioning Classes
.position-absolute
  position: absolute
.position-relative
  position: relative

// Color inherit
.color-inherit
  color: inherit !important

// Display classes
.display-block
  display: block !important
.display-inline-block
  display: inline-block !important
.display-inline
  display: inline !important

// Clearfix
.clear:before,
.clear:after
  content: " "
  display: table
.clear:after
  clear: both

// Animation content wrapper
.animate-wrapper
  position: relative
  > .ng-enter, > .ng-leave
    position: absolute
    width: 100%
    height: 100%

// Round classes
.make-round
  border-radius: 50%

// Overfflow-classes
.overflow-visible
  overflow: visible
.overflow-auto
  overflow: auto
.overflow-hidden
  overflow: hidden

// Not selectable classes
.no-select
  user-select: none

// No shadow
.no-shadow
  box-shadow: none !important

// Example Tabs
.example-tabs
  md-tab-content md-content
    background: rgba(100, 100, 100, 0.1)
.example-tabs-nopadding
  md-card-content
    padding: 0px
.example-tabs-500-height
  height: 500px

// full background image
.full-image-background
  background-size: cover
  background-position: center

/* added to fix bug in chrome & safari when scrolling an md-content with a background image (was removing gradient) */
.background-overlay-static
  position: static